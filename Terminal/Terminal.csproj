<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<ItemGroup>
		<PackageReference Include="ConsoleTables" Version="2.4.2" />
		<Content Include="Program.cs" />
	</ItemGroup>
	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="." />
		<Content Include="ProgressBar.cs" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\AionianApp.Core\AionianApp.Core.csproj" />
	</ItemGroup>
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFrameworks>netcoreapp2.1;netcoreapp3.1;net5.0</TargetFrameworks>
		<PackageId>Azuxiren.Aionian.Terminal</PackageId>
		<PackAsTool>true</PackAsTool>
		<ToolCommandName>aionian-terminal</ToolCommandName>
		<Version>2.0</Version>
		<Authors>AzuxirenLeadGuy</Authors>
		<Company>Azuxiren</Company>
		<RepositoryUrl>https://github.com/AzuxirenLeadGuy/Aionian-Project</RepositoryUrl>
		<Description>Terminal tool for using Aionian Bible resources.</Description>
		<PackageLicenseExpression>CC-BY-4.0</PackageLicenseExpression>
		<PackageTags>Aionian;Bible;Tool;Terminal</PackageTags>
		<PackageIcon>icon.png</PackageIcon>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageOutputPath>../Nuget/</PackageOutputPath>
		<Title>Aionian Bible Terminal</Title>
		<Summary>Terminal tool for Aionian</Summary>
		<PackageReleaseNotes>Removed bug for app crashing when loading chapters with verses absent in some bibles (like Matt 17:21 in Aionian);</PackageReleaseNotes>
		<Language>C#</Language>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>
</Project>